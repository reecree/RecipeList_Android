            <!--android:id="@+id/dialog_ingr_unit_text"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginStart="2dp"-->
            <!--android:layout_marginEnd="2dp"-->
            <!--android:layout_toEndOf="@+id/dialog_ingr_unit"-->
            <!--android:layout_alignBaseline="@+id/dialog_ingr_unit"-->
            <!--android:text="@string/dialog_ingr_units"-->
            <!--android:textSize="18sp"/>-->
    <!--</RelativeLayout>-->
    <EditText
        android:id="@+id/dialog_ingr_name"
        android:inputType="text"
        android:maxLines="2"
        android:maxLength="50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="8dp"
        android:textSize="18sp"
        android:hint="@string/dialog_ingr_name"/>
</LinearLayout>